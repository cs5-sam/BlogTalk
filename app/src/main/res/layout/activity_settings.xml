<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/settings_password_edit_text"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:inputType="textPassword"
            android:background="@drawable/reg_edittext_style"
            android:hint="Enter new password"/>

        <Button
            android:id="@+id/change_password_btn"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@+id/settings_password_edit_text"
            android:text="Change password"
            android:textAllCaps="false"
            android:background="@drawable/login"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
        <Button
            android:id="@+id/deactivate_btn"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@+id/change_password_btn"
            android:text="Deactivate Account"
            android:textAllCaps="false"
            android:background="@drawable/warning_btn_design"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"/>
        <ProgressBar
            android:id="@+id/settings_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_password_btn"
            android:layout_marginTop="45dp"
            android:background="@drawable/circle_bg"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</ScrollView>