<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:background="#263238">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:id="@+id/login_user_image"
            android:src="@drawable/title"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/login_email_edit_text"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_user_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/reg_edittext_style"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:fontFamily="@font/nunito"
            android:hint="Enter email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/login_password_edit_text"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_email_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/reg_edittext_style"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:fontFamily="@font/nunito"
            android:hint="Enter password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/login_password_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/login"
            android:fontFamily="@font/grenzegotisch"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <ProgressBar
            android:id="@+id/login_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_password_edit_text"
            android:layout_marginTop="100dp"
            android:background="@drawable/circle_bg"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/register_here_text"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:text="Not a user ? Register here"
            android:textColor="#00C853" />


    </RelativeLayout>

</ScrollView>